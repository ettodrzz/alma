{
	// ------
	// Window
	// ------

	// Show command launcher together with window title
	"window.commandCenter": false,

	// Control the visibility of the menu bar
	"window.menuBarVisibility": "hidden",

	// ---------
	// Workbench
	// ---------

	// Specifies the color theme used in the workbench
	"workbench.colorTheme": "Gruvbox Light Hard",

	// Controls whether the layout control is shown in the custom title bar
	"workbench.layoutControl.enabled": false,

	// Controls which editor is shown at startup
	"workbench.startupEditor": "none",

	// ------
	// Editor
	// ------

	// Controls whether suggestions should be accepted on Enter
	"editor.acceptSuggestionOnEnter": "off",

	// Controls whether the editor should automatically close brackets after the user adds an opening bracket
	"editor.autoClosingBrackets": "never",

	// Controls whether the editor should remove adjacent closing quotes or brackets whe deleting
	"editor.autoClosingDelete": "never",

	// Controls whether the editor should type over closing quotes or brackets
	"editor.autoClosingOvertype": "never",

	// Controls whether the editor should automatically close quotes after the user adds an opening quote
	"editor.autoClosingQuotes": "never",

	// Controls whether the editor should automatically close comments after the user adds an opening comment
	"editor.autoClosingComments": "never",

	// Controls whether `editor.tabSize` and `editor.insertSpaces` will be automatically detected when a file is opened based on the file contents
	"editor.detectIndentation": false,

	// Controls the font family
	"editor.fontFamily": "CaskaydiaMono Nerd Font",

	// Controls the font size in pixels
	"editor.fontSize": 14,

	// Controls the font weight
	"editor.fontWeight": 300,

	// Controls whether bracket pair guides are enabled or not
	"editor.guides.bracketPairs": true,

	// Insert spaces when pressing Tab
	"editor.insertSpaces": false,

	// Controls whether the editor has linked editing enabled
	"editor.linkedEditing": true,

	// Controls how the editor should render whitespace characters
	"editor.renderWhitespace": "boundary",

	// Render the actual characters on a line as opposed to color blocks
	"editor.minimap.renderCharacters": false,

	// The number of spaces a tab is equal to
	"editor.tabSize": 2,

	// Controls how lines should wrap
	"editor.wordWrap": "on",

	// --------
	// Terminal
	// --------

	// Controls the font family of the terminal
	"terminal.integrated.fontFamily": "CaskaydiaMono Nerd Font",
	
	// Controls the font size in pixels of the terminal
	"terminal.integrated.fontSize": 15,

	// The font weight to use within the terminal for non-bold text
	"terminal.integrated.fontWeight": 300,

	// The font weight to use within the terminal for bold text
	"terminal.integrated.fontWeightBold": 600,

	// -----------------
	// Auto closing tags
	// -----------------

	// Enable/disable autoclosing of HTML tags
	"html.autoClosingTags": false,

	// Enable/disable automatic closing of JSX tags
	"javascript.autoClosingTags": false,
	"typescript.autoClosingTags": false,

	// --------
	// Security
	// --------

	// Controls whether or not Workspace Trust is enabled within VS Code
	"security.workspace.trust.enabled": false,

	// ----------
	// Extensions
	// ----------

	// Current active spelling language
	"cSpell.language": "en,es"
